<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Valentine's Day Magic</title>
    <style>
      body {
        font-family: "Arial", sans-serif;
        background: linear-gradient(to right, #ff758c, #ff7eb3);
        text-align: center;
        color: #fff;
        margin: 0;
        padding: 0;
        overflow: hidden;
      }
      header {
        padding: 20px;
        font-size: 24px;
        font-weight: bold;
        background: rgba(255, 255, 255, 0.1);
      }
      .container {
        padding: 50px 20px;
      }
      .valentine-card {
        background: rgba(255, 255, 255, 0.2);
        padding: 30px;
        border-radius: 15px;
        width: 300px;
        margin: 0 auto;
        display: none;
        transition: transform 0.5s;
      }
      .valentine-card.show {
        display: block;
        transform: scale(1.1);
      }
      .button {
        display: inline-block;
        padding: 10px 20px;
        margin-top: 20px;
        color: #ff7eb3;
        background: white;
        border: none;
        border-radius: 20px;
        font-size: 18px;
        cursor: pointer;
        transition: 0.3s;
      }
      .button:hover {
        background: #ff758c;
        color: white;
      }
      .heart {
        position: absolute;
        font-size: 24px;
        color: red;
        opacity: 0.8;
        animation: float 2s linear infinite;
      }
      @keyframes float {
        from {
          transform: translateY(0);
          opacity: 1;
        }
        to {
          transform: translateY(-100px);
          opacity: 0;
        }
      }
    </style>
  </head>
  <body>
    <header>Happy Valentine's Day ❤️</header>
    <div class="container">
      <button class="button" onclick="showCard()">Open Your Card</button>
      <div class="valentine-card" id="valentineCard">
        <h2>Love & Happiness</h2>
        <p>May your day be filled with love, joy, and sweet moments.</p>
      </div>
    </div>
    <script>
      function showCard() {
        document.getElementById("valentineCard").classList.add("show");
        createHearts();
      }

      function createHearts() {
        for (let i = 0; i < 20; i++) {
          let heart = document.createElement("div");
          heart.innerHTML = "❤️";
          heart.classList.add("heart");
          heart.style.left = Math.random() * window.innerWidth + "px";
          heart.style.top = Math.random() * window.innerHeight + "px";
          heart.style.animationDuration = Math.random() * 2 + 1 + "s";
          document.body.appendChild(heart);
          setTimeout(() => heart.remove(), 2000);
        }
      }
    </script>
  </body>
</html>
